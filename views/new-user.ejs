<%- include('components/head') %>

<section class="main-container">

  <!-- Create New User Form -->
  <form action="/create-user-post" method="POST">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>

    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>

    <div>
      <label for="number">Phone Number:</label>
      <input type="tel" id="number" name="number" required>
    </div>

    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
    </div>

    <div>
      <label for="role">Role:</label>
      <select name="role" id="role" required>
        <option value="admin">Admin</option>
        <option value="employee">Employee</option>
      </select>
    </div>


    <%#     <div>
      <label for="profileImage">Profile Image (Optional):</label>
      <input type="file" id="profileImage" name="profileImage">
    </div> %>

    <!-- Department Field: Either Select from existing or Enter New -->
    <div>
      <label for="department">Department:</label>
      <select name="department" id="department">
        <option value="">Select Department</option>
        <% departments.forEach(department => { %>
          <option value="<%= department._id %>"><%= department.name %></option>
        <% }) %>
      </select>
      <p>Or</p>
      <input type="text" id="newDepartment" name="newDepartment" placeholder="Enter new department">
    </div>

    <!-- Position Field: Either Select from existing or Enter New -->
    <div>
      <label for="position">Position:</label>
      <select name="position" id="position">
        <option value="">Select Position</option>
        <% positions.forEach(position => { %>
          <option value="<%= position._id %>"><%= position.name %></option>
        <% }) %>
      </select>
      <p>Or</p>
      <input type="text" id="newPosition" name="newPosition" placeholder="Enter new position">
    </div>

    <div>
      <label for="isActive">Active:</label>
      <input type="checkbox" id="isActive" name="isActive" checked>
    </div>

    <div>
      <button type="submit">Create User</button>
    </div>
  </form>

</section>

<%- include('components/foot') %>
